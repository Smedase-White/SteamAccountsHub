<UserControl 
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ic="using:FluentIcons.Avalonia"
  mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="30"
  x:Class="SteamAccountsHub.Avalonia.Views.Controls.CryptoFieldView">
  
  <Grid ColumnDefinitions="75, 10, *, 10, 30">
    <TextBlock
      VerticalAlignment="Center"
      Grid.Column="0"
      Text="{Binding Label, Mode=OneWay}"/>
    <TextBox
      Grid.Column="2"
      Classes="revealPasswordButton"
      PasswordChar="â€¢"
      KeyDown="OnKeyDown"
      LostFocus="OnLostFocus"
      Text="{Binding Data}"/>
    <Button
      Grid.Column="4"
      Background="{StaticResource ResetColor}"
      ToolTip.Tip="Copy"
      ToolTip.ShowDelay="200"
      Command="{Binding Copy}">
      <ic:SymbolIcon
        Symbol="Copy"
        IsFilled="True"/>
    </Button>
  </Grid>
  
</UserControl>
