<UserControl 
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ic="using:FluentIcons.Avalonia"
  x:Class="SteamAccountsHub.Avalonia.Views.Controls.KeyInputView">
  
  <Border
    CornerRadius="16"
    Width="300"
    Background="{StaticResource PanelBackgroundColor}">
    <Grid 
      Margin="8"
      ColumnDefinitions="*, 10, 50"
      RowDefinitions="Auto">
      <TextBox 
        Grid.Row="0"
        Grid.Column="0"
        CornerRadius="8"
        BorderBrush="{Binding TextBorderColor}"
        Watermark="Enter key"
        Text="{Binding Key}"/>
      <Button
        Grid.Row="0"
        Grid.Column="2"
        CornerRadius="8"
        Background="{StaticResource CheckColor}"
        Command="{Binding CheckCommand}"
        LostFocus="OnGotFocus">
        <ic:SymbolIcon
          Symbol="LockClosedKey"
          IsFilled="True"/>
      </Button>
    </Grid>
  </Border>
</UserControl>
